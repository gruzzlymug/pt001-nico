<script type="text/javascript">
  $(document).ready(function() {
    $.ajax({
      type: "GET",
      url: "/users",
      dataType: "json",
      success: function(data) {
        for (var i = 0; i < data.length; ++i)
        {
          var id = data[i].id;
          var name = data[i].name;
          var row = "<tr class=''><td><a href='#' onclick='getUser(" + id + ")'>" + name + "</a></td></tr>";
          $("#all_users").append(row);
        }
      }
    })
  })
</script>

